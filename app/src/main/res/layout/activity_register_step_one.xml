<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activitys.RegisterStepOneActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/nameTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/nameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Name"
                        android:inputType="textCapWords"
                        android:nextFocusDown="@+id/surnameTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/surnameTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/surnameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Surname"
                        android:inputType="textCapWords"
                        android:nextFocusUp="@id/nameTextInputEditText"
                        android:nextFocusDown="@+id/emailTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/emailTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:nextFocusUp="@id/surnameTextInputEditText"
                        android:nextFocusDown="@+id/masterNameTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/masterNameTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/masterNameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Master Name"
                        android:inputType="textEmailAddress"
                        android:nextFocusUp="@id/emailTextInputEditText"
                        android:nextFocusDown="@+id/masterPassTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/masterPasswordTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/masterPasswordTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Master Password"
                        android:nextFocusUp="@id/masterNameTextInputEditText"
                        android:nextFocusDown="@+id/confirmMasterPasswordTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/confirmMasterPasswordTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/confirmMasterPasswordTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Confirm Master Password"
                        android:nextFocusUp="@id/masterPasswordTextInputEditText"
                        android:nextFocusDown="@+id/addressOneTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addressOneTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addressOneTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Address 1"
                        android:inputType="textCapWords"
                        android:maxLines="2"
                        android:minLines="2"
                        android:nextFocusUp="@id/confirmMasterPasswordTextInputEditText"
                        android:nextFocusDown="@+id/addressTwoTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addressTwoTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addressTwoTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Address 2"
                        android:inputType="textCapWords"
                        android:maxLines="2"
                        android:minLines="2"
                        android:nextFocusUp="@id/addressOneTextInputEditText"
                        android:nextFocusDown="@+id/cityNameTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cityTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cityTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="City"
                        android:inputType="textCapWords"
                        android:nextFocusUp="@id/addressTwoTextInputEditText"
                        android:nextFocusDown="@+id/stateTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/stateTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/stateTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="State"
                        android:inputType="textCapWords"
                        android:nextFocusUp="@id/cityTextInputEditText"
                        android:nextFocusDown="@+id/zipCodeTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/zipCodeTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/zipCodeTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Zip Code"
                        android:inputType="number"
                        android:nextFocusUp="@id/stateTextInputEditText"
                        android:nextFocusDown="@+id/primaryPhoneTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/primaryPhoneTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/primaryPhoneTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Primary Phone"
                        android:inputType="number"
                        android:nextFocusUp="@id/zipCodeTextInputEditText"
                        android:nextFocusDown="@+id/alternatePhoneTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/alternatePhoneTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/alternatePhoneTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shail_automation"
                        android:hint="Alternate Phone"
                        android:inputType="number"
                        android:nextFocusUp="@id/primaryPhoneTextInputEditText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D6F5F8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/reset_next_button_background"
            android:fontFamily="@font/shail_automation"
            android:shadowColor="@android:color/transparent"
            android:text="Reset"
            android:inputType="text"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/reset_next_button_background"
            android:fontFamily="@font/shail_automation"
            android:shadowColor="@android:color/transparent"
            android:text="Next"
            android:inputType="text"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>