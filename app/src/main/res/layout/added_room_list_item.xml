<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/upper_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/added_room_type_and_icon_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/upper_line"
        android:orientation="horizontal"
        android:background="@drawable/select_room_type_item_background">

        <TextView
            android:id="@+id/room_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Drawing Room"/>

        <ImageView
            android:id="@+id/room_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_settings" />
    </LinearLayout>

    <TextView
        android:id="@+id/role_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/upper_line"
        android:layout_toRightOf="@id/added_room_type_and_icon_linear_layout"
        android:layout_toEndOf="@id/added_room_type_and_icon_linear_layout"
        android:text="Admin"
        android:padding="8dp"
        android:background="@drawable/select_room_type_item_background"/>

    <ImageView
        android:id="@+id/edit_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/upper_line"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_edit_black_24dp" />

    <ImageView
        android:id="@+id/delete_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/upper_line"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_alignParentRight="true" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/role_text_view"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>